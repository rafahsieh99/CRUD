<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learn It, Love It</title>
</head>
<body>
    <h1>Temas de Aprendizaje</h1>

    <!-- Formulario para agregar un nuevo tema -->
    <form action="/create" method="POST">
        <input type="text" name="name" placeholder="Nuevo tema" required>
        <button type="submit">Agregar Tema</button>
    </form>

    <ul>
        <% topics.forEach(topic => { %>
            <li>
                <h3><%= topic.name %></h3>
                <p>Votos: <%= topic.vote_count %></p>

                <!-- Formulario para votar por el tema -->
                <form action="/vote/<%= topic.id %>" method="POST" style="display: inline;">
                    <button type="submit">Votar</button>
                </form>

                <!-- Formulario para eliminar el tema -->
                <form action="/delete/<%= topic.id %>" method="POST" style="display: inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
