<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VOTACION</title>
    <script src="/public/script.js" defer></script>  <!-- Enlace al archivo JS -->
</head>
<body>
    <h1>Temas de Aprendizaje</h1>

    <!-- Formulario para agregar un nuevo tema -->
    <form action="/create" method="POST">
        <input type="text" name="name" placeholder="Nuevo tema" required>
        <button type="submit">Agregar Tema</button>
    </form>

    <ul>
        <% topics.forEach(topic => { %>
            <li>
                <h3><%= topic.name %></h3>
                <p id="vote-count-<%= topic.id %>">Votos: <%= topic.vote_count %></p>

                <!-- Botón de votación manejado por JavaScript -->
                <button class="vote-button" data-topic-id="<%= topic.id %>">Votar</button>

                <!-- Formulario para eliminar el tema -->
                <form action="/delete/<%= topic.id %>" method="POST" style="display: inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
